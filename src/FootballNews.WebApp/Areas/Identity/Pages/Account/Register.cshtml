@page
@model RegisterModel
@{
    ViewData["Title"] = "Rejestracja";
}



<div class="row">
    <div class="col-md-4 offset-md-4 ">
        <h1 style="text-align:center">@ViewData["Title"]</h1>
        <hr />
        <form asp-route-returnUrl="@Model.ReturnUrl" method="post">


            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label>Login</label>
                <input asp-for="Input.Login" class="form-control" />
                <span asp-validation-for="Input.Login" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Email</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Hasło</label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label>Potwierdź hasło</label>
                <input asp-for="Input.ConfirmPassword" class="form-control" />
                <span asp-validation-for="Input.ConfirmPassword" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary offset-md-4">Rejestracja</button>
        </form>
        <a class="" asp-area ="Identity" asp-page="/Account/Login">Posiadasz konto? Zaloguj się!</a>
</div>

</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}