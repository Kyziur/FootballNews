@page
@model IndexModel
@{
    ViewData["Title"] = "Profil";
    ViewData["ActivePage"] = ManageNavPages.Index;
}

<h4>@ViewData["Title"]</h4>
<partial name="_StatusMessage" model="Model.StatusMessage"/>
<div class="row">
    <div class="col-md-6">
        <form id="profile-form" method="post" enctype="multipart/form-data">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Username">Nazwa użytkownika</label>
                <input asp-for="Username" class="form-control" disabled/>
            </div>
            <div class="form-group">
                <label asp-for="Input.PhoneNumber">Numer telefonu</label>
                <input asp-for="Input.PhoneNumber" class="form-control"/>
                <span asp-validation-for="Input.PhoneNumber" class="text-danger"></span>
            </div>
            <div class="my-1">
                <span class="text-dark">Avatar</span>
                <div>

                    @if (Model.Input.PhotoAsBytes != null && Model.Input.PhotoAsBytes.Length > 0)
                    {
                        <img class="img-thumbnail" src="data:image/jpg;base64, @Convert.ToBase64String(Model.Input.PhotoAsBytes)" alt="">
                    }
                    else
                    {
                        <svg class="bd-placeholder-img img-thumbnail" width="200" height="200" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="A generic square placeholder image with a white border around it, making it resemble a photograph taken with an old instant camera: 200x200">
                            <title>A generic square placeholder image with a white border around it, making it resemble a photograph taken with an old instant camera</title><rect width="100%" height="100%" fill="#868e96"></rect><text x="17%" y="50%" fill="#dee2e6" dy=".3em">Picture is not set.</text>
                        </svg>
                    }
                </div>
            </div>
            <div class="form-group">
                <div class="custom-file">
                    <label asp-for="Input.Photo">Wybierz zdjęcie</label>
                    <input accept="image/png, image/jpeg" type="file" class="custom-file-input" asp-for="Input.Photo">
                    <label class="custom-file-label" asp-for="Input.Photo">wybierz zdjęcie</label>
                </div>
            </div>
            <button id="update-profile-button" type="submit" class="btn btn-primary">Zapisz</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial"/>
}