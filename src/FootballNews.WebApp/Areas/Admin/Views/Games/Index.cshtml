@model IPagedList<FootballNews.WebApp.Areas.Admin.ViewModels.Game.IndexGameModel>
@{
    ViewData["Title"] = "Games";
}

<div class="d-flex justify-content-between align-items-center my-3 card-header bg-deep-green text-white">
    <header class="">
        <h2>Games</h2>
    </header>
    <div>
        <a class="btn btn-md btn-outline-light" asp-area="Admin" asp-controller="Games" asp-action="Create">
            <div class="d-inline-block mr-1">
                <i class="fas fa-plus"></i>
            </div>Create
        </a>
    </div>
</div>
<div class="mb-3">
    <form class="form-inline" method="get" asp-area="Admin" asp-controller="Games" asp-action="Index" asp-route-page="@Model.PageNumber">
        <input class="form-control mr-sm-2" type="search" placeholder="Search by team name" aria-label="Search" name="search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
    </form>
</div>
<div class="table-responsive">
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Home team name</th>
            <th scope="col">Away team name</th>
            <th scope="col">Score</th>
            <th scope="colgroup">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var game in Model)
        {
            <tr>
                <th scope="row">@game.HomeTeam</th>
                <th scope="row">@game.AwayTeam</th>
                <td class="font-weight-bold">
                    @if (game.HomeTeamScore == game.AwayTeamScore)
                    {
                        <text><span class="text-muted">@game.HomeTeamScore</span> | <span class="text-muted">@game.AwayTeamScore</span></text>
                    }
                    @if (game.HomeTeamScore > game.AwayTeamScore)
                    {
                        <text><span class="text-success">@game.HomeTeamScore</span> | <span class="text-danger">@game.AwayTeamScore</span></text>
                    }
                    @if(game.AwayTeamScore > game.HomeTeamScore)
                    {
                        <text><span class="text-danger">@game.HomeTeamScore</span> | <span class="text-success">@game.AwayTeamScore</span></text>
                    }


                </td>
                <td>
                    <div class="btn-group text-white" role="group" aria-label="Actions">
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Games" asp-action="Update" asp-route-id="@game.Id"><i class="fas fa-edit"></i>Edit</a>
                        <a class="btn btn-danger delete" asp-area="Admin" asp-controller="Games" asp-action="Delete" asp-route-id="@game.Id" data-confirm="Are you sure you want to delete this item?"><i class="far fa-trash-alt"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new {page = page}),
        new PagedListRenderOptions
        {
            LiElementClasses = new string[] {"page-item"},
            PageClasses = new string[] {"page-link"},
            DisplayLinkToFirstPage = PagedListDisplayMode.Never,
            DisplayLinkToLastPage = PagedListDisplayMode.Never,
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            MaximumPageNumbersToDisplay = new int?(5)
        })
</div>

@section Scripts
{
    <script>
    areYouSure();
    </script>
}