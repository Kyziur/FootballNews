@model TagModel
@{
    ViewData["Title"] = "Update tag";
    Layout = "_Layout";
}
<div class="container shadow">
    <div class="d-flex justify-content-between align-items-center my-3 card-header bg-deep-green text-white" xmlns="http://www.w3.org/1999/html">
        <header class="">
            <h2>Update</h2>
        </header>
        @* <div><a class="btn btn-md btn-success text-white" asp-area="Admin" asp-controller="Articles" asp-action="Create"> *@
        @*    <div class="d-inline-block mr-1"><i class="fas fa-plus"></i></div>Create *@
        @* </a></div> *@
    </div>
    <form asp-area="Admin" asp-controller="Tags" asp-action="Update" class="container" method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Input name of tag"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group d-flex justify-content-end p-2">
            <button type="submit" class="btn btn-outline-success">Submit</button>
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
    <partial name="_SelectPickerScriptPartial"/>
}