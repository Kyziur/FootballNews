@model FootballNews.WebApp.Areas.Admin.ViewModels.Team.TeamModel
@{
    ViewData["Title"] = "Update team";
    Layout = "_Layout";
}
<div class="container shadow">
    <div class="d-flex justify-content-between align-items-center my-3 card-header bg-deep-green text-white">
        <header class="">
            <h2>Update</h2>
        </header>
    </div>
    <form asp-area="Admin" asp-controller="Teams" asp-action="Update" class="container" method="post">
        <div class="form-group">
            <label asp-for="Name">Name</label>
            <input asp-for="Name" class="form-control" placeholder="Input name of team"/>
            <span asp-validation-for="Name" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="SelectedLeagueId"></label>
            <select asp-for="SelectedLeagueId" asp-items="@Model.Leagues" class="selectpicker" data-live-search="true">
                <option value="" selected="selected" disabled="disabled">Select...</option>
            </select>
            <span asp-validation-for="SelectedLeagueId" class="text-danger"></span>
        </div>
        <div class="form-group d-flex justify-content-end p-2">
            <button type="submit" class="btn btn-outline-success">Submit</button>
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="_SelectPickerScriptPartial"/>
    <partial name="_ValidationScriptsPartial"/>
}