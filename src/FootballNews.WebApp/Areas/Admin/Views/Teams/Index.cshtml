@model IPagedList<FootballNews.WebApp.Areas.Admin.ViewModels.Team.TeamModel>

@{
    ViewData["Title"] = "Drużyny";
}

<div class="d-flex justify-content-between align-items-center my-3 card-header bg-deep-green text-white">
    <header class="">
        <h2>Drużyny</h2>
    </header>
    <div>
        @if (User.IsInRole(Role.Admin) || User.IsInRole(Role.Redaktor))
        {
            <a class="btn btn-md btn-outline-light" asp-area="Admin" asp-controller="Teams" asp-action="Create">
                <div class="d-inline-block mr-1">
                    <i class="fas fa-plus"></i>
                </div>Dodaj
            </a>
        }
        </div>
</div>
<div class="mb-3">
    <form class="form-inline" method="get" asp-area="Admin" asp-controller="Teams" asp-action="Index" asp-route-page="@Model.PageNumber">
        <input class="form-control mr-sm-2" type="search" placeholder="Wyszukaj zespół" aria-label="Search" name="search">
        <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Szukaj</button>
    </form>
</div>
<div class="table-responsive">
    <table class="table">
        <thead class="thead-dark">
            <tr>
                <th scope="col">Nazwa</th>
                @if (User.IsInRole(Role.Admin)|| User.IsInRole(Role.Redaktor))
                {
                    <th scope="col">Akcje</th>
                }
                </tr>
        </thead>
        <tbody>
            @foreach (var team in Model)
            {
            <tr>
                <th scope="row">@team.Name</th>
                @if (User.IsInRole(Role.Admin) || User.IsInRole(Role.Redaktor))
                {
                    <td>
                        <div class="btn-group text-white" role="group" aria-label="Actions">
                            <a class="btn btn-primary" asp-area="Admin" asp-controller="Teams" asp-action="Update" asp-route-id="@team.Id"><i class="fas fa-edit"></i>Edytuj</a>
                            <a class="btn btn-danger delete" asp-area="Admin" asp-controller="Teams" asp-action="Delete" asp-route-id="@team.Id" data-confirm="Czy chcesz usunąć ten element?"><i class="far fa-trash-alt"></i>Usuń</a>
                        </div>
                    </td>
                }
            </tr>
            }
        </tbody>
    </table>
</div>
<div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }),
        new PagedListRenderOptions
        {
            LiElementClasses = new string[] { "page-item" },
            PageClasses = new string[] { "page-link" },
            DisplayLinkToFirstPage = PagedListDisplayMode.Never,
            DisplayLinkToLastPage = PagedListDisplayMode.Never,
            DisplayLinkToPreviousPage = PagedListDisplayMode.Always,
            DisplayLinkToNextPage = PagedListDisplayMode.Always,
            MaximumPageNumbersToDisplay = new int?(5)
        })
</div>
@section Scripts
{
    <script>
        areYouSure();
    </script>
}