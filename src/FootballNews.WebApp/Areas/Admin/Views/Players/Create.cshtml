@model PlayerModel
@{
    ViewData["Title"] = "Create player";
    Layout = "_Layout";
}
<div class="container shadow">
    <div class="d-flex justify-content-between align-items-center my-3 card-header bg-deep-green text-white" xmlns="http://www.w3.org/1999/html">
        <header class="">
            <h2>Create</h2>
        </header>
    </div>
    <form asp-area="Admin" asp-controller="Players" asp-action="Create" class="container" method="post">
        <div class="d-flex">
            <div class="form-group">
                <label asp-for="FirstName" class="">First name</label>
                <input asp-for="FirstName" class="form-control" placeholder="First name"/>
                <small>
                    <span asp-validation-for="FirstName" class="text-danger"></span>
                </small>

            </div>
            <div class="form-group mx-5">
                <label asp-for="LastName" class="">Last name</label>
                <input asp-for="LastName" class="form-control" placeholder="Last name"/>
                <small>
                    <span asp-validation-for="LastName" class="text-danger"></span>
                </small>
            </div>
            <div class="form-group">
                <label asp-for="Birthdate" class="">Birthdate</label>
                <input asp-for="Birthdate" class="form-control" placeholder="Height"/>
                <small>
                    <span asp-validation-for="Birthdate" class="text-danger"></span>
                </small>
            </div>
        </div>
        <div class="d-flex">
            <div class="form-group">
                <label asp-for="Height" class="">Height</label>
                <input asp-for="Height" min="100" max="250" class="form-control" placeholder="Height"/>
                <small>
                    <span asp-validation-for="Height" class="text-danger"></span>
                </small>
            </div>
            <div class="form-group">
                <label asp-for="Position" class="">Position</label>
                <input asp-for="Position" class="form-control" placeholder="Position"/>
                <small>
                    <span asp-validation-for="Position" class="text-danger"></span>
                </small>
            </div>
            <div class="form-group mx-5">
                <label asp-for="NumberOnShirt" class="">Number on t-shirt</label>
                <input asp-for="NumberOnShirt" min="0" max="100" class="form-control" placeholder="NumberOnShirt"/>
                <small>
                    <span asp-validation-for="NumberOnShirt" class="text-danger"></span>
                </small>
            </div>
        </div>
        <div class="d-flex">
            <div class="form-group">
                <label asp-for="SelectedTeamId" class="sr-only"></label>
                <select asp-for="SelectedTeamId" asp-items="@Model.Teams" title="Select team" class="selectpicker" data-live-search="true">
                </select>
                <span asp-validation-for="SelectedTeamId" class="text-danger"></span>
            </div>
        </div>
        <div class="form-group d-flex justify-content-end p-2">
            <button type="submit" class="btn btn-outline-success">Submit</button>
        </div>
    </form>
</div>

@section Scripts
{
    <partial name="_ValidationScriptsPartial"/>
    <partial name="_SelectPickerScriptPartial"/>
}