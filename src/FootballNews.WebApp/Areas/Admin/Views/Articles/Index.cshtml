@model IPagedList<IndexArticleModel>
@{
    ViewData["Title"] = "Articles";
}

<div class="d-flex justify-content-between align-items-center my-3 card-header bg-deep-green text-white">
    <header class="">
        <h2>Articles</h2>
    </header>
    <div>
        <a class="btn btn-md btn-outline-light" asp-area="Admin" asp-controller="Articles" asp-action="Create">
            <div class="d-inline-block mr-1">
                <i class="fas fa-plus"></i>
            </div>Create
        </a>
    </div>
</div>
<div class="table-responsive">
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Title</th>
            <th scope="col">Content</th>
            <th scope="col">Image</th>
            <th scope="col">Tags</th>
            <th scope="col">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var article in Model)
        {
            <tr>
                <td>@article.Title</td>
                <td class="td-wrapped">@article.Content.RemoveHtml().LimitOnWordBoundary(200)</td>
                <td>
                    <div class="">
                        @if (article.ImageAsBytes != null && article.ImageAsBytes.Length > 0)
                        {
                            <img src="data:image/jpg;base64, @Convert.ToBase64String(article.ImageAsBytes)" alt="" class="img-thumbnail img-table">
                        }
                    </div>
                </td>
                <td>
                    <div class="d-flex flex-column">
                        @foreach (var tag in article.Tags)
                        {
                            <span class="border-bottom text-center">@tag</span>
                        }
                    </div>
                </td>
                <td>
                    <div class="btn-group text-white" role="group" aria-label="Actions">
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Articles" asp-action="Update" asp-route-id="@article.Id"><i class="fas fa-edit"></i>Edit</a>
                        <a class="btn btn-danger delete" asp-area="Admin" asp-controller="Articles" asp-action="Delete" asp-route-id="@article.Id" data-confirm="Are you sure you want to delete this item?"><i class="far fa-trash-alt"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>
<div>
    @Html.PagedListPager(Model, page => Url.Action("Index", new { page = page }), 
    new PagedListRenderOptions {
        LiElementClasses = new string[] { "page-item" },
        PageClasses = new string[] { "page-link" }
})
</div>
@section Scripts
{
    <script>
    areYouSure();
    </script>
}