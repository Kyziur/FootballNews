@model IEnumerable<FootballNews.WebApp.Areas.Admin.ViewModels.League.LeagueModel>
@{
    ViewData["Title"] = "Leagues";
}

<div class="d-flex justify-content-between align-items-center my-3 card-header bg-deep-green text-white">
    <header class="">
        <h2>Leagues</h2>
    </header>
    <div>
        <a class="btn btn-md btn-outline-light" asp-area="Admin" asp-controller="Leagues" asp-action="Create">
            <div class="d-inline-block mr-1">
                <i class="fas fa-plus"></i>
            </div>Create
        </a>
    </div>
</div>
<div class="table-responsive">
    <table class="table">
        <thead class="thead-dark">
        <tr>
            <th scope="col">Name</th>
            <th scope="colgroup">Actions</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var league in Model)
        {
            <tr>
                <th scope="row">@league.Name</th>
                <td>
                    <div class="btn-group text-white" role="group" aria-label="Actions">
                        <a class="btn btn-primary" asp-area="Admin" asp-controller="Leagues" asp-action="Update" asp-route-id="@league.Id"><i class="fas fa-edit"></i>Edit</a>
                        <a class="btn btn-danger delete" asp-area="Admin" asp-controller="Leagues" asp-action="Delete" asp-route-id="@league.Id" data-confirm="Are you sure you want to delete this item?"><i class="far fa-trash-alt"></i>Delete</a>
                    </div>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>

@section Scripts
{
    <script>
    areYouSure();
    </script>
}