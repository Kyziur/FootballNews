@model IEnumerable<FootballNews.WebApp.Components.TagModel>

<div class="mt-4 p-1">
    <ul class="list-group">
        <li class="list-group-item bg-deep-green d-flex justify-content-center align-items-center">
            <span class="font-weight-bold text-light">Tags</span>
        </li>
        @foreach (var tag in Model)
        {
            <a asp-controller="Home" asp-action="Index" asp-all-route-data="@Context.GetQueryParameters()" asp-route-tag="@tag.Name" class="list-group-item d-flex justify-content-between align-items-center list-group-item-action">
                @tag.Name
                <span class="badge badge-primary badge-pill">@tag.NumberOfArticles</span>
            </a>
        }
    </ul>
</div>