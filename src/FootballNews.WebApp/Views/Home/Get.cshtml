            </span>
        </div>
        <div class="blog-post text-break">
            @Html.Raw(Model.Content)
        </div><!-- /.blog-post -->
    </div>
    <div class="my-3">
        <a class="btn btn-outline-success" asp-action="Index" asp-controller="Home">Back to articles</a>
    </div>
</div>
<div id="comments-container" class="mt-3">

</div>
